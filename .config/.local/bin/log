#!/usr/bin/env bash

Color_Reset='\e[0m'

Black_on_Green='\e[1;30;42m'
Black_on_Yellow='\e[1;30;43m'

# Background
Red_bg='\e[41m'

# Bold
Green_600='\e[1;32m'
Red_600='\e[1;31m'
Yellow_600='\e[1;33m'

function error(){
    echo -e "${Red_bg}Error${Color_Reset} ${Red_600}$* ${Color_Reset}" >&2
    exit 1;
}

function info() {
    echo -e "$*"
}

function warning() {
    echo -e "${Black_on_Yellow}Warning${Color_Reset} ${Yellow_600}$* ${Color_Reset}"
}


function success() {
    echo -e "${Black_on_Green}Success${Color_Reset} ${Green_600}$* ${Color_Reset}"

}
